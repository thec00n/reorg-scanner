{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "rootDir": "src",
    "outDir": "dist",
    "sourceMap": true,
    "lib": [
      "es6",
      "dom"
    ],
    "esModuleInterop": true,
    "strict": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
  },
  "include": [
    "src/*.ts",
  ],
  "exclude": [
    "node_modules",
  ]
}